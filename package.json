{
  "name": "hugo-ldapcp",
  "version": "2.0.0.0",
  "description": "Hugo site for LDAPCP project",
  "author": "Yvand",
  "license": "MIT",
  "scripts": {
    "create": "hugo new",
    "dev": "hugo server --bind=0.0.0.0 --disableFastRender --noHTTPCache",
    "prebuild": "tsc -p ./ts_src",
    "format": "prettier **/** -w -c",
    "build": "hugo --minify --gc",
    "preview": "vite preview --outDir public"
  },
  "dependencies": {
    "@tabler/icons": "^3.21.0",
    "@thulite/doks-core": "^1.8.0",
    "@thulite/images": "^3.3.0",
    "@thulite/inline-svg": "^1.2.0",
    "@thulite/seo": "^2.4.1",
    "thulite": "^2.4.2"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.32",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  },
  "engines": {
    "node": ">=20.11.0"
  }
}
